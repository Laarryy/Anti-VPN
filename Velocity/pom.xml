<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>antivpn-parent</artifactId>
        <groupId>me.egg82</groupId>
        <version>3.5.20</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>antivpn-velocity</artifactId>
    <version>${project.parent.version}</version>

    <build>
        <sourceDirectory>src/main/java</sourceDirectory>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <relocations>
                        <!-- dep-injected -->
                        <relocation>
                            <pattern>com.github.benmanes.caffeine</pattern>
                            <shadedPattern>me.egg82.antivpn.external.com.github.benmanes.caffeine</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.zaxxer.hikari</pattern>
                            <shadedPattern>me.egg82.antivpn.external.com.zaxxer.hikari</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>javassist</pattern>
                            <shadedPattern>me.egg82.antivpn.external.javassist</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.apache.commons.collections</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.apache.commons.collections</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.apache.commons.net</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.apache.commons.net</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.bstats</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.bstats</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>redis.clients</pattern>
                            <shadedPattern>me.egg82.antivpn.external.redis.clients</shadedPattern>
                        </relocation>

                        <!-- regular relocations -->
                        <relocation>
                            <pattern>co.aikar.commands</pattern>
                            <shadedPattern>me.egg82.antivpn.external.co.aikar.commands</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.googlecode</pattern>
                            <shadedPattern>me.egg82.antivpn.external.com.googlecode</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>it.unimi</pattern>
                            <shadedPattern>me.egg82.antivpn.external.it.unimi</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>me.lucko</pattern>
                            <shadedPattern>me.egg82.antivpn.external.me.lucko</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>net.jodah</pattern>
                            <shadedPattern>me.egg82.antivpn.external.net.jodah</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>ninja.egg82</pattern>
                            <shadedPattern>me.egg82.antivpn.external.ninja.egg82</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>ninja.leaping</pattern>
                            <shadedPattern>me.egg82.antivpn.external.ninja.leaping</shadedPattern>
                        </relocation>
                        <!-- lang3 is dep-injected -->
                        <relocation>
                            <pattern>org.apache.commons</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.apache.commons</shadedPattern>
                            <excludes>
                                <exclude>org.apache.commons.pool2.**</exclude>
                            </excludes>
                        </relocation>
                        <relocation>
                            <pattern>org.hamcrest</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.hamcrest</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.json</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.json</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.yaml</pattern>
                            <shadedPattern>me.egg82.antivpn.external.org.yaml</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <dependencyReducedPomLocation>${project.build.directory}/dependency-reduced-pom.xml</dependencyReducedPomLocation>
                            <minimizeJar>false</minimizeJar>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <!-- included or useless -->
                                        <exclude>LICENSE*</exclude>
                                        <exclude>com/google/common/**</exclude>
                                        <exclude>com/google/errorprone/**</exclude>
                                        <exclude>com/google/j2objc/**</exclude>
                                        <exclude>com/google/thirdparty/publicsuffix/**</exclude>
                                        <exclude>javax/annotation/**</exclude>
                                        <exclude>org/checkerframework/**</exclude>
                                        <exclude>org/codehaus/**</exclude>
                                        <exclude>org/intellij/**</exclude>
                                        <exclude>junit/**</exclude>
                                        <exclude>org/junit/**</exclude>

                                        <!-- dep-injected -->
                                        <exclude>com/github/benmanes/caffeine/**</exclude>
                                        <exclude>com/rabbitmq/**</exclude>
                                        <exclude>com/zaxxer/hikari/**</exclude>
                                        <exclude>javassist/**</exclude>
                                        <exclude>org/apache/commons/collections/**</exclude>
                                        <exclude>org/apache/commons/net/**</exclude>
                                        <exclude>org/reflections/**</exclude>
                                        <exclude>redis/clients/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <!-- prevent removal of things from common -->
                                    <artifact>me.egg82:antivpn-common</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>velocity</id>
            <url>https://repo.velocitypowered.com/snapshots/</url>
        </repository>
        <repository>
            <id>aikar</id>
            <url>https://repo.aikar.co/content/groups/aikar/</url>
        </repository>
        <repository>
            <id>sponge</id>
            <url>https://repo.spongepowered.org/maven/</url>
        </repository>
        <repository>
            <id>CodeMC</id>
            <url>https://repo.codemc.org/repository/maven-public</url>
        </repository>
        <repository>
            <id>placeholderapi</id>
            <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
        <repository>
            <id>github-rjenkinsjr</id>
            <url>https://raw.github.com/rjenkinsjr/maven2/repo</url>
        </repository>
        <repository>
            <id>egg82-ninja</id>
            <url>https://www.myget.org/F/egg82-java/maven/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.velocitypowered</groupId>
            <artifactId>velocity-api</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>co.aikar</groupId>
            <artifactId>acf-velocity</artifactId>
            <version>0.5.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>co.aikar</groupId>
            <artifactId>acf-core</artifactId>
            <version>0.5.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ninja.egg82</groupId>
            <artifactId>event-chain-velocity</artifactId>
            <version>1.0.6</version>
        </dependency>
        <dependency>
            <groupId>org.spongepowered</groupId>
            <artifactId>configurate-yaml</artifactId>
            <version>3.5</version>
        </dependency>
        <dependency>
            <groupId>me.lucko</groupId>
            <artifactId>jar-relocator</artifactId>
            <version>1.3</version>
        </dependency>

        <dependency>
            <groupId>com.djrapitops</groupId>
            <artifactId>Plan-common</artifactId>
            <version>4.5.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>3.6</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>me.egg82</groupId>
            <artifactId>antivpn-common</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.3.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>